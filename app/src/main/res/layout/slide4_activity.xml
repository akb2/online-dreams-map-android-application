<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011950"
    tools:context="com.online.dreams_map.Activities.StartSlides.FourthSlideShow">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/SlideLayoutContent">

            <ImageView
                style="@style/SlideIcon"
                app:srcCompat="@drawable/fourth_layer_1" />

            <TextView
                style="@style/Header"
                android:text="Общайся с единомышленниками" />

            <TextView
                style="@style/Content"
                android:text="Найди себе друзей по интересу или же найди наставника, который поможет развиться в твоем увлечении." />
        </LinearLayout>


        <LinearLayout
            style="@style/SlideLayoutButton">

            <Button
                android:id="@+id/backButton"
                style="@style/MainButtonBack"
                android:stateListAnimator="@null"
                android:text="Назад" />
            <Button
                android:id="@+id/nextButton"
                style="@style/MainButton"
                android:stateListAnimator="@null"
                android:text="Начать" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>