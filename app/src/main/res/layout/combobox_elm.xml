<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/combobox_elm"
        style="@style/formGroupComboBoxElm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/combobox_elm_image"
                style="@style/formGroupComboBoxElmImage"
                android:layout_weight="0"
                app:srcCompat="@drawable/first_layer_1" />

            <TextView
                android:id="@+id/combobox_elm_input"
                style="@style/formGroupComboBoxElmInput"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:text="Test Text Test Text Test Text Test Text Test Text" />

            <TextView
                android:id="@+id/combobox_elm_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>